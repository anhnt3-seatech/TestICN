pipeline {
    agent any

    tools {
        ant 'ApacheAnt'      // tên Ant trong Jenkins
        jdk 'jdk17'          // tên JDK trong Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/anhnt3-seatech/TestICN.git'
            }
        }

        stage('Build') {
            steps {
                bat 'ant clean compile dist'
            }
        }

        //stage('Test') {
        //    steps {
        //        bat 'ant test'
        //    }
        //}

        //stage('Archive Artifact') {
        //    steps {
        //        archiveArtifacts artifacts: 'dist/*.jar', fingerprint: true
        //    }
        //}

        stage('Deploy') {
            steps {
                // Ví dụ copy file .war lên Tomcat qua SCP
                //sh 'scp dist/yourapp.war user@server:/opt/tomcat/webapps/'
                bat """
                    copy /Y target\\TestApp-0.0.1-SNAPSHOT.war "%TOMCAT_WEBAPPS%\\TestApp.war"
                """
            }
        }
    }
    post {
        always {
            echo "Pipeline finished!"
        }
        success {
            echo "Build & Deploy successful!"
        }
        failure {
            echo "Build failed!"
        }
    }
}